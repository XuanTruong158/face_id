<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add.ThemSinhvien">
    <?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#D4F8F8"
            android:padding="16dp"
            android:layout_margin="8dp"
            android:elevation="4dp">

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thêm tài khoản Sinh viên"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:paddingBottom="16dp"/>

            <!-- Mã SV + Lớp học -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="12dp">

                <EditText
                    android:id="@+id/edtMaSV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Mã SV"
                    android:inputType="text"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"/>

                <Spinner
                    android:id="@+id/spinnerLop"
                    android:layout_width="0dp"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>

            <!-- Họ và tên -->
            <EditText
                android:id="@+id/edtHotenSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Họ và tên"
                android:layout_marginBottom="12dp"
                android:inputType="textPersonName"/>

            <!-- Email -->
            <EditText
                android:id="@+id/edtEmailSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:layout_marginBottom="12dp"
                android:inputType="textEmailAddress"/>

            <!-- Mật khẩu -->
            <EditText
                android:id="@+id/edtPasswordSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mật khẩu"
                android:layout_marginBottom="12dp"
                android:inputType="textPassword"/>

            <!-- Xác nhận mật khẩu -->
            <EditText
                android:id="@+id/edtConfirmPasswordSV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Xác nhận mật khẩu"
                android:layout_marginBottom="16dp"
                android:inputType="textPassword"/>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <Button
                    android:id="@+id/btnCreateSV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tạo tài khoản"
                    android:backgroundTint="@color/teal_700"
                    android:textColor="@android:color/white"/>

                <Space
                    android:layout_width="12dp"
                    android:layout_height="wrap_content"/>

                <Button
                    android:id="@+id/btnCancelSV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Huỷ"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>