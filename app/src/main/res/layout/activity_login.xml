<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineCurve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.48" />

    <include
        android:id="@+id/include_login_background"
        layout="@layout/login_background"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="-200dp"
        android:transitionName="login_background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guidelineCurve" />

    <ImageView
        android:id="@+id/bgPattern"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.2"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_pattern"
        android:contentDescription="image_background"
        android:transitionName="pattern"
        android:layout_marginTop="-10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/guidelineCurve"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="-38dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Đăng nhập"
        android:textColor="#333333"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineCurve" />

    <View
        android:id="@+id/titleUnderline"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="290dp"
        android:background="@color/light_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvWelcome" />


    <!-- Mã sinh viên -->
    <TextView
        android:id="@+id/tvStudentId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Mã sinh viên"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        android:layout_marginStart="22dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleUnderline" />

    <LinearLayout
        android:id="@+id/llStudentId"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext_bg"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvStudentId">

        <ImageView
            android:id="@+id/ivUser"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/user"
            android:contentDescription="user_icon"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <View
            android:id="@+id/verticalDividerStudent"
            android:layout_width="1.5dp"
            android:layout_height="26dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:background="@color/darker_gray" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/etStudentId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Nhập mã sinh viên của bạn"
            android:padding="0dp"
            android:inputType="text"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="14sp" />

    </LinearLayout>


    <!--Mật khẩu-->
    <TextView
        android:id="@+id/tvPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="16dp"
        android:text="Mật khẩu"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llStudentId" />

    <LinearLayout
        android:id="@+id/llPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        android:background="@drawable/rounded_edittext_bg"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/tvPassword">

        <ImageView
            android:id="@+id/ivLock"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_lock"
            android:contentDescription="lock_icon"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerInside" />

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <View
            android:id="@+id/verticalDividerPassword"
            android:layout_width="1.5dp"
            android:layout_height="26dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="11dp"
            android:background="@color/darker_gray" />

        <View
            android:layout_width="8dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent" />

        <EditText
            android:id="@+id/etPasswordCustom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:hint="Nhập mật khẩu của bạn"
            android:padding="0dp"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="14sp" />

        <!-- eye toggle -->
        <ImageButton
            android:id="@+id/ivPasswordToggle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/ic_visibility"
            android:contentDescription="toggle_password"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbRememberMe"
        style="@style/Widget.AppCompat.CompoundButton.CheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Lưu đăng nhập"
        android:textColor="#333333"
        android:textSize="16sp"
        app:buttonTint="@color/light_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llPassword" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="Quên mật khẩu?"
        android:textColor="@color/light_blue"
        android:textSize="16sp"
        android:fontFamily="@font/roboto_bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cbRememberMe"
        app:layout_constraintBottom_toBottomOf="@id/cbRememberMe" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="48dp"
        android:text="Đăng nhập"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_semibold"
        android:backgroundTint="@color/light_blue"
        android:padding="16dp"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
