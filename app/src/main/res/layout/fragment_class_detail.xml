<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- CARD TRẠNG THÁI LỚP -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:strokeWidth="2dp"
            app:strokeColor="@color/green_600">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvBadge"
                    android:text="ĐANG TRONG GIỜ HỌC"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/green_600"
                    android:background="@drawable/bg_badge_green_pill"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"/>

                <ImageButton
                    android:id="@+id/btnMore"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/abc_action_menu_overflow_description"
                    app:srcCompat="@drawable/ic_more_vert"
                    app:tint="@color/gray_700"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvTitle"
                    android:text="Android Hè 2025 (CSE441_01)"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/tvBadge"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/btnMore"
                    android:layout_marginTop="8dp"/>

                <TextView
                    android:id="@+id/tvWeek"
                    android:text="Week 5"
                    android:textColor="@color/gray_700"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tvTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="2dp"/>

                <View
                    android:id="@+id/divider1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="@color/card_stroke"
                    app:layout_constraintTop_toBottomOf="@id/tvWeek"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"/>

                <!-- CỘT TRÁI: Giảng viên -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/colRight"
                    app:layout_constraintTop_toBottomOf="@id/divider1"
                    app:layout_constraintWidth_percent="0.5">

                    <TextView
                        android:text="Giảng viên"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvLecturer"
                        android:text="Kiều Tuấn Dũng"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- CỘT PHẢI: Lớp bắt đầu -->
                <LinearLayout
                    android:id="@+id/colRight"
                    android:orientation="vertical"
                    android:gravity="end"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider1"
                    app:layout_constraintStart_toEndOf="@+id/divider_v"
                    app:layout_constraintWidth_percent="0.5">

                    <TextView
                        android:text="Lớp bắt đầu"
                        android:textColor="@color/gray_700"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:id="@+id/tvStartTime"
                        android:text="07 : 10 AM"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <!-- Vạch dọc giả để canh 2 cột (không hiển thị) -->
                <View
                    android:id="@+id/divider_v"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/divider1"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- NÚT ĐIỂM DANH -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAttendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp"
            android:foreground="?attr/selectableItemBackground">

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="ĐIỂM DANH"
                    android:textStyle="bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    android:src="@drawable/ic_chevron_right"
                    android:contentDescription=""
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:tint="@color/gray_700"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- GIỚI THIỆU MÔN HỌC -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:strokeColor="@color/card_stroke"
            app:strokeWidth="1dp">

            <LinearLayout
                android:padding="14dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="GIỚI THIỆU MÔN HỌC"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvDesc"
                    android:layout_marginTop="6dp"
                    android:text="Lập trình Android dạy cách phát triển ứng dụng Android — từ Android Studio, thiết kế UI/UX, lưu trữ dữ liệu và kết nối API đến kiểm thử và triển khai qua bài tập thực hành"
                    android:textColor="@color/gray_700"
                    android:lineSpacingExtra="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="12dp"
                    android:background="@color/card_stroke"/>

                <!-- Hàng tiêu đề người dạy -->
                <LinearLayout
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/ic_person"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:tint="@color/gray_700"/>

                    <TextView
                        android:layout_marginStart="8dp"
                        android:text="Kiều Tuấn Dũng"
                        android:textStyle="bold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"/>

<!--                    <ImageView-->
<!--                        android:src="@drawable/ic_expand_more"-->
<!--                        android:layout_width="24dp"-->
<!--                        android:layout_height="24dp"-->
<!--                        app:tint="@color/gray_700"/>-->
                </LinearLayout>

                <!-- Ô thông tin: ngày giờ -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/info_bg"
                    app:strokeColor="@color/card_stroke"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:padding="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_event"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="@color/gray_700"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:text="Ngày và giờ"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvSchedule"
                                android:text="Thứ Ba, 7:10 am - 7:50 pm"
                                android:textColor="@color/gray_700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Ô thông tin: phòng học -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/info_bg"
                    app:strokeColor="@color/card_stroke"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:padding="12dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/ic_location"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            app:tint="@color/gray_700"/>

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="10dp">

                            <TextView
                                android:text="Lớp"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>

                            <TextView
                                android:id="@+id/tvRoom"
                                android:text="Phòng 207, tòa B5"
                                android:textColor="@color/gray_700"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Spacer bottom (nếu có bottom nav) -->
        <Space
            android:layout_width="match_parent"
            android:layout_height="80dp"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
